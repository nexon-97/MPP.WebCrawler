<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="Web Crawler" Height="700" Width="1200"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.Column="0">
            <MenuItem Header="File">
                <MenuItem Header="Open"/>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1" Grid.Column="0">

        </Grid>
        <StatusBar Grid.Row="2" Grid.Column="0" Background="{Binding StatusBar.BackgroundColor}" Loaded="OnStatusBarLoaded">
            <TextBlock Foreground="{Binding StatusBar.TextColor}" Text="{Binding StatusBar.StatusText}"/>
        </StatusBar>
    </Grid>
</Window>
